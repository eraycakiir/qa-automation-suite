<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="QA Test Suite" verbose="1" parallel="false">
    <listeners>
        <listener class-name="hooks.Hooks"/>
    </listeners>

    <!-- ✅ UI Smoke Tests -->
    <test name="UI Smoke Tests">
        <classes>
            <class name="tests.ui.LoginPageOpenTest"/>
        </classes>
    </test>

    <!-- ✅ UI Functional Tests -->
    <test name="UI Functional Tests">
        <classes>
            <class name="tests.ui.LoginTest"/>
            <class name="tests.ui.InvalidLoginTest"/>
        </classes>
    </test>

    <!-- ✅ API Tests -->
    <test name="API Tests">
        <classes>
            <class name="tests.api.UserApiTest"/>
            <class name="tests.api.UserCrudApiTest"/>
        </classes>
    </test>

</suite>
