<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="QA Test Suite" verbose="1" parallel="false">
    <listeners>
        <listener class-name="hooks.Hooks"/>
    </listeners>

    <test name="Tagged Tests">
        <groups>
            <run>
                <include name="${group}"/>
            </run>
        </groups>
        <packages>
            <package name="tests"/>
        </packages>
    </test>
</suite>
